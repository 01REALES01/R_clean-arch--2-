datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  role          UserRole       @default(USER)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  tasks         Task[]
  notifications Notification[]
}

enum UserRole {
  USER
  ADMIN
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  status      TaskStatus   @default(PENDING)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([userId])
  @@index([status])
  @@index([dueDate])
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Notification {
  id        String             @id @default(uuid())
  userId    String
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationType
  title     String
  message   String
  status    NotificationStatus @default(PENDING)
  metadata  Json               @default("{}")
  createdAt DateTime           @default(now())
  sentAt    DateTime?

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum NotificationType {
  TASK_CREATED
  TASK_UPDATED
  TASK_DELETED
  TASK_DUE_SOON
  TASK_OVERDUE
  DAILY_SUMMARY
}

enum NotificationStatus {
  PENDING
  READ
  SENT
  FAILED
}